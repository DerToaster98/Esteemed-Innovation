{
  "multipart": [
    {
      "when": { "facing": "north" },
      "apply": { "model": "steamcraft:heater" }
    },
    {
      "when": { "facing": "south" },
      "apply": { "model": "steamcraft:heater", "y": 180 }
    },
    {
      "when": { "facing": "east" },
      "apply": { "model": "steamcraft:heater", "y": 90 }
    },
    {
      "when": { "facing": "west" },
      "apply": { "model": "steamcraft:heater", "y": 270 }
    },
    {
      "when": { "facing": "up" },
      "apply": { "model": "steamcraft:heater", "x": 270 }
    },
    {
      "when": { "facing": "down" },
      "apply": { "model": "steamcraft:heater", "x": 90 }
    },
    {
      "apply": { "model": "steamcraft:pipe_center" }
    },
    {
      "when": { "north": false, "south": false, "east": false, "west": false, "up": false, "down": false},
      "apply": { "model": "steamcraft:pipe_no_connections" }
    },
    {
      "when": { "OR": [
        { "north": true },
        { "north": false, "south": true, "east": false, "west": false, "up": false, "down": false }
      ] },
      "apply": { "model": "steamcraft:pipe_connection" }
    },
    {
      "when": { "OR": [
        { "east": true },
        { "east": false, "west": true, "north": false, "south": false, "up": false, "down": false }
      ] },
      "apply": { "model": "steamcraft:pipe_connection", "y": 90 }
    },
    {
      "when": { "OR": [
        { "south": true },
        { "south": false, "north": true, "east": false, "west": false, "up": false, "down": false }
      ] },
      "apply": { "model": "steamcraft:pipe_connection", "y": 180 }
    },
    {
      "when": { "OR": [
        { "west": true },
        { "west": false, "east": true, "north": false, "south": false, "up": false, "down": false }
      ] },
      "apply": { "model": "steamcraft:pipe_connection", "y": 270 }
    },
    {
      "when": { "OR": [
        { "up": true },
        { "up": false, "down": true, "north": false, "south": false, "east": false, "west": false}
      ] },
      "apply": { "model": "steamcraft:pipe_connection", "x": 270 }
    },
    {
      "when": { "OR": [
        { "down": true },
        { "down": false, "up": true, "north": false, "south": false, "east": false, "west": false }
      ] },
      "apply": { "model": "steamcraft:pipe_connection", "x": 90 }
    }
  ]
}
